---
import Body from '../components/common/Body.astro';
import Head from '../components/head/Head.astro';
import '../styles/global.css';
import {head} from '../config';

export interface Props {
  className?: string;
  title?: string;
}

const {className, title = head.defaultTitle} = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="h-full font-mono">
  <Head title={title} />

  <Body className={className}>
    <slot />
  </Body>
</html>
